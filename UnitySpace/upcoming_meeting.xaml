<UserControl x:Class="UnitySpace.upcoming_meeting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnitySpace"
             mc:Ignorable="d" 
             d:DesignHeight="624" d:DesignWidth="800">
    <Grid  x:Name="grid" Background="white"  Width="800" Height="624">
        <Grid.RowDefinitions>
            <RowDefinition  Height="624"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <StackPanel Height="80"  Width="700" >
                <TextBlock HorizontalAlignment="Left" Margin="63,10,0,0" TextWrapping="Wrap" Text="Upcoming meetings" VerticalAlignment="Top" FontSize="22.5" FontWeight="Bold" />
                <TextBlock HorizontalAlignment="Left" Margin="63,20,0,0" TextWrapping="Wrap" Text="Here is the list of your upcoming  meetings : " VerticalAlignment="Top" FontSize="11.5" />
            </StackPanel>
            <StackPanel  Height="544" x:Name="gridstack" Width="700" Orientation="Vertical"/>
        </StackPanel>
    </Grid>
</UserControl>
