<Page x:Class="UnitySpace.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UnitySpace"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1" Height="720" Width="1012">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Background="Aqua">
            <RadioButton x:Name="Rbtn1" Content="Window1" Checked="Rbtn1_checked"/>
            <RadioButton x:Name="Rbtn2" Content="Window2" Checked="Rbtn2_checked"/>
            <RadioButton x:Name="Rbtn3" Content="Window3" Checked="Rbtn3_checked"/>

        </StackPanel>
        <ContentControl x:Name="CC" Grid.Column="1" />


    </Grid>
</Page>
