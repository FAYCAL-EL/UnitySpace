<UserControl x:Class="UnitySpace.part_pic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnitySpace"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30">
    <Grid>
        <Border  BorderThickness="1,1,1,1" CornerRadius="30" Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="#FF18206F" ClipToBounds="True" SnapsToDevicePixels="True">
            <Border.Background>
                <ImageBrush x:Name="chefImage"  />
            </Border.Background>
        </Border>
    </Grid>
</UserControl>
